{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-console": "error",
        "indent": ["error", 2],
        "no-unused-vars": "warn",
        "quotes": ["error", "single"]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
